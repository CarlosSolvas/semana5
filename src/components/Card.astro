---
export interface Props {
  title: string;
  description: string;
  link: string;
}
const { title, description, link } = Astro.props;
---

<article class="card">
  <h2>{title}</h2>
  <p>{description}</p>
  <a href={link}>Ver más</a>
  <!-- Aquí salen los hijos: el botón de Like u otros componentes -->
  <slot />
</article>

<style>
  .card {
    border: 1px solid #ccc;
    padding: 1rem;
    border-radius: 8px;
    background: #f9f9f9;
    transition: box-shadow 0.2s;
  }
  .card:hover {
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }
  .card a {
    display: inline-block;
    margin-top: 0.5rem;
    color: #007acc;
    text-decoration: none;
    font-weight: bold;
  }
  .card a:hover {
    text-decoration: underline;
  }
  /* Si el slot es un botón, le damos un pequeño margen */
  .card ::slotted(*) {
    margin-top: 1rem;
  }
</style>
