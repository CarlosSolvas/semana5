---
// BaseLayout.astro
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Mi sitio web</title>
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <header>
      <nav>
        <ul>
          <li><a href="/" class="menu-item">Inicio</a></li>
          <li><a href="/about" class="menu-item">Sobre mí</a></li>
          <li><a href="/contact" class="menu-item">Contacto</a></li>
        </ul>
      </nav>
    </header>

    <main>
      <slot /> <!-- Aquí se inyecta el contenido de las páginas -->
    </main>

    <footer>
      <p>&copy; {new Date().getFullYear()} Mi sitio web. Todos los derechos reservados.</p>
    </footer>
  </body>
</html>
